# .completion_loader  is sourced from ~/.bashrc if the normal bash-completion load process isn't working
#
#   _complete_alias needs ~/.bash_completion.d/complete_alias
#   Example: how to use complete_alias:
#
#       alias container='docker container'
#       complete -F _complete_alias container

[[ -f /usr/share/bash-completion/bash_completion ]] && {
    source /usr/share/bash-completion/bash_completion
}
[[  -f /etc/bash_completion ]] && {
    source /etc/bash_completion
}
[[ -d ${HOME}/.bash_completion.d ]] && {
    for xf in ${HOME}/.bash_completion.d/*; do
        source ${xf}
    done
}
COMPLETION_LOADER=1

